<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/general_settings_header">

        <EditTextPreference
            app:key="name"
            app:title="@string/name_title"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:dependency="name"
            app:key="hearts"
            app:title="@string/hearts_title" />

    </PreferenceCategory>

</PreferenceScreen>